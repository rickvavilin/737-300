<!-- Speed knob control --> 

    <animation>
        <type>knob</type>
        <object-name>cylinder</object-name>
        <property>/autopilot/settings/speed-bug</property>
        <factor>-5</factor>
      <center>
        <x-m>0.0</x-m>
        <y-m>-0.115</y-m>
        <z-m>0.029</z-m>
      </center>
      <axis>
        <x>1</x>
        <y>0</y>
        <z>0</z>
      </axis>
    <drag-scale>2</drag-scale>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>/autopilot/settings/speed-bug</property>
        <factor>1</factor>
      </binding>
    </action>
    <increase>
      <binding>
        <command>nasal</command>
        <script>
         autopilot737.speed_increase();
        </script>   
      </binding>
    </increase>
    <decrease>
      <binding>
        <command>nasal</command>
        <script>
         autopilot737.speed_decrease();
        </script>   
      </binding>
    </decrease>
    </animation>

